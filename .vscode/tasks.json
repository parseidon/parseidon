{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "dotnet: clean+build",
			"command": "dotnet",
			"args": [
				"clean",
				"--nologo",
				"&&",
				"dotnet",
				"build",
				"--nologo",
				"--verbosity",
				"minimal"
			],
			"options": {
				"env": {
					"DOTNET_CLI_CONTEXT_ANSI_PASS_THRU": "true"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"type": "shell",
			"label": "Create VS Code extension",
			"command": "${workspaceFolder}/Output/bin/Parseidon.Cli/Debug/net9.0/dotnet-parseidon",
			"args": [
				"vscode",
				"${workspaceFolder}/Output/common/parseidon.pgram",
				"${workspaceFolder}/Output/VSCodePackage",
				"-o",
				"override"
			],
			"options": {
				"env": {
					"DOTNET_CLI_CONTEXT_ANSI_PASS_THRU": "true"
				}
			},
			"problemMatcher": []
		}
	]
}