{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI: Parser to Output",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/Output/bin/Parseidon.Cli/Debug/net9.0/dotnet-parseidon.dll",
            "args": [
                "parser",
                "${workspaceFolder}/common/parseidon.pgram",
                "${workspaceFolder}/Output/Parser.cs",
                "-o",
                "backup"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "CLI: Override Parser",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/Output/bin/Parseidon.Cli/Debug/net9.0/dotnet-parseidon.dll",
            "args": [
                "parser",
                "${workspaceFolder}/common/parseidon.pgram",
                "${workspaceFolder}/libs/Parser/Parser.cs",
                "-o",
                "backup"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "CLI: Create AST",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/Output/bin/Parseidon.Cli/Debug/net9.0/dotnet-parseidon.dll",
            "args": [
                "ast",
                "${workspaceFolder}/common/parseidon.pgram",
                "${workspaceFolder}/Output/ast.yaml"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "CLI: Create VSCode Package",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/Output/bin/Parseidon.Cli/Debug/net9.0/dotnet-parseidon.dll",
            "args": [
                "vscode",
                "${workspaceFolder}/common/parseidon.pgram",
                "${workspaceFolder}/Output/VSCodePackage",
                "-o",
                "override"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Run VS Code Extension",
            "type": "extensionHost",
            "request": "launch",
            "preLaunchTask": "Create VS Code extension",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/Output/VSCodePackage"
            ],
            "cwd": "${workspaceFolder}/Output/VSCodePackage",
        }
    ]
}